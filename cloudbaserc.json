{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "vaultwarden",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "vaultwarden",
          "servicePath": "/",
          "uploadType": "image",
          "containerPort": 80,
          "imageInfo": {
            "imageUrl": "vaultwarden/server:latest"
          },
          "envVariables": {
            "WEBSOCKET_ENABLED": "false"
          },
          "volumeMounts": {
            "/data": "vaultwarden-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "vaultwarden-cfs"
        }
      ]
    }
  }
}
